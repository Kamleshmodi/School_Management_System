{
  "version": 2,
  "public": false,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "outputDirectory": "public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/public/index.php"
    }
  ]
}
